<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/layoutline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">
        <Spinner
            android:layout_margin="6dp"
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent" />
        <View
            android:layout_margin="6dp"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent">
        </View>
        <ImageButton
            android:layout_gravity="center_vertical"

            android:src="@drawable/glass"
            android:adjustViewBounds="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>
        <View
            android:layout_weight="0.05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"/>
        <ImageButton
            android:adjustViewBounds="true"
            android:layout_margin="2dp"
            android:src="@drawable/menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"/>
        <View
            android:layout_weight="0.05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"/>
        <ImageButton
            android:adjustViewBounds="true"
            android:layout_margin="2dp"
            android:src="@drawable/bell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:background="@drawable/layoutline"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
                <ImageView

                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"/>
                <TextView
                    android:layout_margin="6dp"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="당근으로 신혼 집 마련했어요 천천동 이웃들을 초대해요"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layoutline"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
                <ImageView

                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"/>
                <TextView
                    android:layout_margin="6dp"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="의자 팔아요"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layoutline"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
                <ImageView

                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"/>
                <TextView
                    android:layout_margin="6dp"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="카사미아 6인용 식탁팝니다"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layoutline"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
                <ImageView

                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"/>
                <TextView
                    android:layout_margin="6dp"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="Britz BZ T3730 사운드바"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layoutline"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
                <ImageView

                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"/>
                <TextView
                    android:layout_margin="6dp"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="동탄2신도시 하이엔드 타워빌리지 더챔버 라티파니"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layoutline"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
                <ImageView

                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"/>
                <TextView
                    android:layout_margin="6dp"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="as;dflk"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layoutline"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
                <ImageView

                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"/>
                <TextView
                    android:layout_margin="6dp"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="as;dflk"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <ImageButton
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/imageButton4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/glass" />

        <ImageButton

            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/imageButton3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButton5"
            app:srcCompat="@drawable/glass" />

        <ImageButton
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButton4"
            app:srcCompat="@drawable/glass" />

        <ImageButton
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButton3"
            app:srcCompat="@drawable/glass" />

        <ImageButton
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            app:srcCompat="@drawable/glass" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>